# OpenAI
OPENAI_API_KEY=sk-...

# Blogger OAuth2 (one-time you must obtain REFRESH_TOKEN as earlier explained)
CLIENT_ID=your-google-client-id.apps.googleusercontent.com
CLIENT_SECRET=your-google-client-secret
REFRESH_TOKEN=your-refresh-token
BLOG_ID=1234567890123456789

# App settings
GSMARENA_RSS=https://www.gsmarena.com/rss-news-reviews.php
POST_INTERVAL_CRON=0 * * * *    # optional: every hour (cron format). Used only when running as a persistent process.
MAX_ITEMS_PER_RUN=3             # how many latest feed items to check per run
OPENAI_MODEL=gpt-4o-mini        # change if you prefer another
DB_PATH=./data/posts.db         # SQLite DB path
